<%# Create a table to display stored stock value %>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Symbol</th>
            <th>Current Price</th>
            <%# Check if session is current suer %>
            <% if @user.id == current_user.id %>
                <th>Actions</th>
            <% end %>
        </tr>
    </thead>
    <tbody>
        <%# Looping through user table to find their stocks thats being tracked %>
        <% @user_stocks.each do |user_stock| %>
            <tr>
                <td><%= user_stock.name %></td>
                <td><%= user_stock.ticker %></td>
                <td><%= user_stock.last_price %></td>
                <%# If session is current user, display an 'Delete' button %>
                <% if @user.id == current_user.id %>
                    <td><%= link_to "Delete this stock", user_stock_path(user_stock), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-danger" %></td>
                <% end %>
            </tr>
        <% end %>
    </tbody>
</table>